<%- include('layout/base'); -%>

    <title>bradarr - Authentication</title>
</head>
<body class="flex justify-center items-center flex-col h-screen w-screen">
    <%- include('layout/alerts'); -%>
    <main class="-mt-20 flex justify-center items-center flex-col gap-6">
        <div class="flex justify-center items-center flex-col gap-3">
            <div class="flex flex-col justify-center items-center gap-1">
                <img src="/images/logo.png" alt="bradarr" class="select-none w-6 h-6" />
                <h1 class="text-lg text-gray-700 font-bold">bradarr</h1>  
            </div>
            <h2 class="text-4xl text-gray-700 font-bold">Authentication</h2>  
        </div>
        <form class="flex justify-center items-center flex-col" action="/auth/login" method="POST">
            <div class="flex flex-col justify-center items-center gap-3 h-full w-[300px]">
                <div class="mb-2 w-full flex justify-start flex-col items-start">
                    <label for="username" class="block mb-1 text-sm text-gray-500">Username</label>
                    <input type="text" id="username" name="username" value="" placeholder="admin" required class="bg-gray-50 border-1 border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-primary block w-full p-2.5"/>
                </div>
                <div class="mb-2 w-full">
                    <label for="password" class="block mb-1 text-sm text-gray-500">Your password</label>
                    <input type="password" id="password" name="password" value="" class="bg-gray-50 border-1 border-gray-300 text-gray-900 text-sm rounded-lg focus:outline-primary block w-full p-2.5" placeholder="y0urP@ssw0rd" required />
                </div>
                <button type="submit" class="primary-action">Submit</button>
            </div>
        </form>
    </main>
</body>
</html>
